page {
  height: 100%;
}
.loginPage {
  background: #f8f8f8;
  height: 100%;
}
.loginPage .userinfo {
  height: 350rpx;
  background-color: #409eff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.loginPage .avatar {
  display: block;
}
.loginPage .avatar image {
  height: 220rpx;
  width: 220rpx;
  display: block;
  border-radius: 50%;
  overflow: hidden;
}
.loginPage .avatar .username {
  display: block;
  text-align: center;
  color: #fff;
}
