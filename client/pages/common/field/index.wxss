page {
  height: 100%;
}
.field .title {
  border-left: 7rpx solid #409eff;
  padding-left: 15rpx;
  margin: 20rpx 0 20rpx 30rpx;
}
.field .item-container {
  display: flex;
  padding: 0 25rpx;
  flex-wrap: wrap;
}
.field .item-container .item {
  width: 50%;
  height: 180rpx;
  overflow: hidden;
}
.field .item-container .item .image-box {
  height: 100%;
}
.field .item-container .item:first-of-type {
  width: 100%;
  height: 280rpx;
}
.field .item-container .item:first-of-type .image-box {
  transform: translateY(-100%);
  transition-property: transform;
  transition-duration: 2s;
}
.field .item-container .item:first-of-type .image-box image {
  display: block;
}
.field .item-container .item:first-of-type .active {
  transform: translateY(0) !important;
  transition-duration: 0s !important;
  backface-visibility: hidden;
  transform-style: preserve-3d;
}
.field .item-container .item:nth-of-type(2) .image-box {
  transition-property: transform;
  transition-duration: 2s;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  transform: translateX(0%);
}
.field .item-container .item:nth-of-type(2) .image-box image {
  height: 100%;
}
.field .item-container .item:nth-of-type(2) .active {
  transform: translateX(-100%) !important;
  transition-duration: 0s !important;
  backface-visibility: hidden;
  transform-style: preserve-3d;
}
.field .item-container .item:nth-of-type(3) .image-box {
  transition-property: transform;
  transition-duration: 2s;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  transform: translateX(0%);
}
.field .item-container .item:nth-of-type(3) .image-box image {
  height: 100%;
}
.field .item-container .item:nth-of-type(3) .active {
  transform: translateX(-100%) !important;
  transition-duration: 0s !important;
  backface-visibility: hidden;
  transform-style: preserve-3d;
}
